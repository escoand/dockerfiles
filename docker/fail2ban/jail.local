[DEFAULT]
backend = systemd
banaction = dummy[target=/dev/null]

[sshd]
enabled = true

[apache-auth]
enabled = true
filter = apache-auth[logging=syslog,_daemon=(?:next cloud|wordpress\d*?)]

[apache-badbots]
enabled = true
filter = apache-badbots[logging=syslog,_daemon=(?:next cloud|wordpress\d*?)]
