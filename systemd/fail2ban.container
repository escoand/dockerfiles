[Unit]
Description=Fail2Ban

[Container]
ContainerName=fail2ban
Environment=PGID=33
Environment=VERBOSITY=-vvvv
Image=lscr.io/linuxserver/fail2ban:1.1.0
Volume=fail2ban:/config
Volume=nextcloud_data:/remotelogs/nextcloud:ro
Volume=/etc/localtime:/etc/localtime:ro
Volume=/var/log:/var/log:ro

[Service]
Restart=always

[Install]
WantedBy=multi-user.target default.target