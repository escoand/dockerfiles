{
    "name": "Nextcloud",
    "version": "v2019.12.08.3",
    "slug": "nextcloud",
    "description": "Nextcloud addon. Image based on upstream docker images. This is just a wrapper to pass environment variable to the container.",
    "url": "https://github.com/escoand/dockerfiles",
    "startup": "system",
    "boot": "auto",
    "arch": [
        "i386",
        "amd64",
        "armhf",
        "aarch64"
    ],
    "ports": {
        "80/tcp": null,
        "443/tcp": null
    },
    "environment": {
        "NEXTCLOUD_DATA_DIR": "/share/nextcloud",
        "NEXTCLOUD_UPDATE": "1"
    },
    "map": ["share:rw"],
    "options": {
        "mysql": {
            "database": "nextcloud",
            "host": "core-mariadb",
            "user": "nextcloud",
            "password": null
        },
        "postgres": {},
        "admin": {
            "user": null,
            "password": null
        },
       	"trusted_domains": null,
        "redis": {},
        "smtp": {
            "host": null,
            "port": null,
            "secure": null,
            "authtype": null,
            "name": null,
            "password": null
        },
        "mail": {
            "from_address": null,
            "domain": null
        }
    },
    "schema": {
        "mysql": {
            "database": "str",
            "host": "str",
            "user": "str",
            "password": "str"
        },
        "postgres": {
            "database": "str?",
            "host": "str?",
            "user": "str?",
            "password": "str?"
        },
        "admin": {
            "user": "str?",
            "password": "str?"
        },
        "trusted_domains": "str?",
        "redis": {
            "host": "str?",
            "port": "port?"
        },
        "smtp": {
            "host": "str?",
            "port": "port?",
            "secure": "match(^ssl$)?",
            "authtype": "str?",
            "name": "str?",
            "password": "str?"
        },
        "mail": {
            "from_address": "email?",
            "domain": "str?"
        }
    },
    "image": "escoand/hassio-nextcloud-{arch}"
}
